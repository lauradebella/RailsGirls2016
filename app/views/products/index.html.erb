<p id="notice"><%= notice %></p>

<%= form_tag products_path, class: 'search', :method => 'get' do%>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Pesquisar", :name => nil %>
  </p>
<% end %>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Categoria</th>
      <th>Tag</th>
      <th>Descrição</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.category %></td>
        <td><%= product.tag %></td>
        <td><%= product.description %></td>
        <td><%= link_to 'Ver', product, class: 'btn' %></td>
        <td><%= link_to 'Editar', edit_product_path(product), class: 'btn' %></td>
        <td><%= link_to 'Excluir', product, method: :delete, data: { confirm: 'Você tem certeza?' }, class: 'btn' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo', new_product_path,  class: 'btn yellow' %>
